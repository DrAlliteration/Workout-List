<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <TextView
        android:id="@+id/studentName"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:text="Name"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/workout_list_delete_button"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:padding="0dp"
        app:icon="@android:drawable/ic_menu_delete"
        app:layout_constraintEnd_toStartOf="@+id/workout_list_edit_button"
        app:layout_constraintStart_toEndOf="@+id/studentName"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/workout_list_edit_button"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:padding="0dp"
        app:icon="@android:drawable/ic_menu_edit"
        app:layout_constraintEnd_toEndOf="@id/workout_list_launch_button"
        app:layout_constraintStart_toEndOf="@+id/workout_list_delete_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/workout_list_launch_button"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:padding="0dp"
        app:icon="@android:drawable/ic_menu_slideshow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/workout_list_edit_button"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>